<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Avatar"
        android:textColor="@color/gris_oscuro"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subtítulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elige uno de tus avatares desbloqueados"
        android:textColor="@color/gris_medio"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- RecyclerView de avatares -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_avatares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:layout_marginBottom="16dp" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progress_bar_avatares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="40dp"
        android:visibility="gone" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/boton_cancelar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/boton_blanco_rectangular"
        android:text="Cancelar"
        android:textColor="@color/gris_oscuro"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
