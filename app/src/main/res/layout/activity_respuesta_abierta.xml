<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo_claro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad"
        android:textStyle="bold"
        android:textColor="@color/gris_oscuro"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe una breve reflexión sobre el capítulo leído."
        android:textColor="@color/gris_oscuro"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="top|start"
        android:background="@drawable/boton_blanco_rectangular"
        android:padding="12dp"
        android:hint="Tu respuesta..." />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Enviar"
        android:onClick="onClickEnviar"
        android:background="@drawable/boton_azul_rectangular"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>


