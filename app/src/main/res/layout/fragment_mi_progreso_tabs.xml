<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_mi_progreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_fuerte"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mi Progreso"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="start" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_trophy"
            android:tint="@android:color/white"
            android:padding="4dp"
            android:contentDescription="Trofeo" />

    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:elevation="2dp"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/btnTabEstadisticas"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/boton_pestana_activa"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/textTabEstadisticas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EstadÃ­sticas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/azul_fuerte" />

            <View
                android:id="@+id/indicadorEstadisticas"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@color/azul_fuerte"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTabActividades"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/boton_pestana_inactiva"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/textTabActividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gris_medio" />

            <View
                android:id="@+id/indicadorActividades"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="@color/azul_fuerte"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Container para fragments -->
    <FrameLayout
        android:id="@+id/containerProgreso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
