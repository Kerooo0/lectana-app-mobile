<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@color/celeste_claro">

            <ImageView
                android:id="@+id/boton_volver"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/azul_fuerte"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Editar Perfil"
                android:textColor="@color/azul_fuerte"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/input_nombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/campo_texto_rectangular"
                android:hint="Ingresa tu nombre"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Apellido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/input_apellido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/campo_texto_rectangular"
                android:hint="Ingresa tu apellido"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Fecha de Nacimiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/input_fecha_nacimiento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/campo_texto_rectangular"
                android:hint="Selecciona tu fecha de nacimiento"
                android:focusable="false"
                android:clickable="true"
                android:paddingHorizontal="16dp"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawableTint="@color/gris_medio"
                android:layout_marginBottom="32dp" />

            <!-- BotÃ³n Guardar -->
            <Button
                android:id="@+id/boton_guardar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/boton_azul_rectangular"
                android:text="Guardar Cambios"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/azul_fuerte" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
