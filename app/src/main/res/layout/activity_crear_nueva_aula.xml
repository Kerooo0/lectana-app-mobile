<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header con flecha de regreso -->
        <LinearLayout
            android:id="@+id/header_crear_aula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azul_semi_oscuro"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginHorizontal="-16dp"
            android:layout_marginTop="-16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/boton_volver"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"
                android:contentDescription="@string/cancelar"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/crear_nueva_aula_titulo"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Formulario -->
        <LinearLayout
            android:id="@+id/contenedor_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/header_crear_aula">

            <!-- Nombre del Aula -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_del_aula"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/campo_nombre_aula"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/campo_texto_rectangular"
                android:hint="@string/ejemplo_nombre_aula"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Grado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grado"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/campo_grado"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/campo_texto_rectangular"
                android:hint="@string/ejemplo_grado"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

        <!-- Vista Previa -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vista_previa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/contenedor_formulario">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/morado_claro">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vista_previa"
                    android:textColor="@color/azul_semi_oscuro"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texto_vista_previa_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3°A - Lengua"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/texto_vista_previa_grado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Grado 3°"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/codigo_generado_automaticamente"
                            android:textColor="@color/azul_semi_oscuro"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_students"
                        android:tint="@color/azul_semi_oscuro" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/card_vista_previa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/contenedor_botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/progress_bar">

            <Button
                android:id="@+id/boton_crear_aula"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/boton_azul_rectangular"
                android:text="@string/crear_aula"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_cancelar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/boton_blanco_rectangular"
                android:text="@string/cancelar"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
