<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_perfil_estudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_fuerte"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/boton_volver_perfil_estudiante"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:contentDescription="@string/flecha_descripcion"
            android:padding="4dp" />

        <TextView
            android:id="@+id/texto_titulo_perfil_estudiante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mi Perfil"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/boton_configuracion_perfil_estudiante"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:tint="@android:color/white"
            android:contentDescription="Configuración"
            android:padding="4dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_perfil_estudiante"
        app:layout_constraintBottom_toTopOf="@id/navegacion_inferior_perfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Sección de Perfil -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- Foto de perfil con botón de editar -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/foto_perfil_estudiante"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_background"
                            android:layout_marginBottom="16dp" />

                        <ImageView
                            android:id="@+id/boton_editar_foto"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignBottom="@id/foto_perfil_estudiante"
                            android:layout_alignEnd="@id/foto_perfil_estudiante"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="0dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/azul_claro"
                            android:background="@drawable/circle_background"
                            android:padding="6dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/nombre_estudiante_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juanito Lector"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/nivel_estudiante_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lector Avanzado"
                        android:textColor="@color/gris_medio"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <!-- Puntos -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_trophy"
                            android:tint="@color/naranjaPastel"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/puntos_estudiante_perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 puntos"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Mis Logros -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mis Logros"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_red" />

                    </LinearLayout>

                    <!-- Grid de logros -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Primera fila de logros -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Primer Cuento Leído -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_book"
                                    android:tint="@color/azul_claro"
                                    android:background="@drawable/circle_background"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Primer Cuento Leído"
                                    android:textColor="@color/gris_oscuro"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10/03/2024"
                                    android:textColor="@color/gris_medio"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <!-- 5 Actividades Completadas -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginHorizontal="8dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_brain"
                                    android:tint="@color/rojoClaro"
                                    android:background="@drawable/circle_background"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 Actividades Completadas"
                                    android:textColor="@color/gris_oscuro"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15/03/2024"
                                    android:textColor="@color/gris_medio"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <!-- Racha de 7 Días -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginStart="8dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_flame"
                                    android:tint="@color/naranjaPastel"
                                    android:background="@drawable/circle_background"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Racha de 7 Días"
                                    android:textColor="@color/gris_oscuro"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20/03/2024"
                                    android:textColor="@color/gris_medio"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Segunda fila de logros -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Maestro de Aventura -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginEnd="8dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_map"
                                    android:tint="@color/celeste_claro"
                                    android:background="@drawable/circle_background"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Maestro de Aventura"
                                    android:textColor="@color/gris_oscuro"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25/03/2024"
                                    android:textColor="@color/gris_medio"
                                    android:textSize="10sp" />

                            </LinearLayout>

                            <!-- Coleccionista de Puntos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginStart="8dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_money"
                                    android:tint="@color/amarilloCalido"
                                    android:background="@drawable/circle_background"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Coleccionista de Puntos"
                                    android:textColor="@color/gris_oscuro"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20/03/2024"
                                    android:textColor="@color/gris_medio"
                                    android:textSize="10sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Mis Avatares Desbloqueados -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mis Avatares Desbloqueados"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/gris_medio" />

                    </LinearLayout>

                    <!-- Avatares -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Astronauta (Equipado) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginEnd="16dp">

                            <ImageView
                                android:id="@+id/avatar_astronauta"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_astronaut"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle_background_azul"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Astronauta"
                                android:textColor="@color/gris_oscuro"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Equipado"
                                android:textColor="@color/azul_claro"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Explorador -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="16dp">

                            <ImageView
                                android:id="@+id/avatar_explorador"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_explorer"
                                android:scaleType="centerCrop"
                                android:background="@drawable/circle_background"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Explorador"
                                android:textColor="@color/gris_oscuro"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Desbloqueado"
                                android:textColor="@color/gris_medio"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/boton_ir_tienda"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/boton_azul_rectangular"
                        android:text="Ir a Tienda"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Configuración de Cuenta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Cambiar Contraseña -->
                    <LinearLayout
                        android:id="@+id/opcion_cambiar_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_key"
                            android:tint="@color/gris_medio"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cambiar Contraseña"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/gris_medio" />

                    </LinearLayout>

                    <!-- Centro de Ayuda -->
                    <LinearLayout
                        android:id="@+id/opcion_centro_ayuda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help"
                            android:tint="@color/gris_medio"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Centro de Ayuda"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/gris_medio" />

                    </LinearLayout>

                    <!-- Cerrar Sesión -->
                    <LinearLayout
                        android:id="@+id/opcion_cerrar_sesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            android:tint="@color/rojo"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cerrar Sesión"
                            android:textColor="@color/rojo"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/rojo" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Navegación Inferior -->
    <LinearLayout
        android:id="@+id/navegacion_inferior_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/tab_inicio_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Biblioteca -->
        <LinearLayout
            android:id="@+id/tab_biblioteca_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_library"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biblioteca"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/tab_progreso_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trophy"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Tienda -->
        <LinearLayout
            android:id="@+id/tab_tienda_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_store"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/tab_perfil_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/azul_fuerte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/azul_fuerte"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
