<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Header del Cuento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:paddingBottom="12dp"
            android:background="@drawable/separador_cuento">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                android:tint="@color/azul_claro"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/cuentos_asignados" />

            <TextView
                android:id="@+id/texto_nombre_cuento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Caperucita Roja"
                android:textColor="@color/gris_oscuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_total_actividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 actividades"
                android:textColor="@color/gris_medio"
                android:textSize="14sp"
                android:background="@drawable/badge_actividades"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Lista de Actividades -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Actividad 1 -->
            <LinearLayout
                android:id="@+id/contenedor_actividad_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fondo_actividad"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/verde"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/actividades" />

                    <TextView
                        android:id="@+id/texto_nombre_actividad_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comprensión - Capítulo 1"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texto_estado_actividad_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activa"
                        android:textColor="@color/verde"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/badge_activa"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo:"
                        android:textColor="@color/gris_medio"
                        android:textSize="13sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/texto_tipo_actividad_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opción Múltiple"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_students"
                        android:tint="@color/azul_claro"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@string/estudiantes" />

                    <TextView
                        android:id="@+id/texto_estudiantes_actividad_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 estudiantes"
                        android:textColor="@color/azul_claro"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Actividad 2 -->
            <LinearLayout
                android:id="@+id/contenedor_actividad_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fondo_actividad"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/verde"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/actividades" />

                    <TextView
                        android:id="@+id/texto_nombre_actividad_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vocabulario - Capítulo 1"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texto_estado_actividad_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activa"
                        android:textColor="@color/verde"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/badge_activa"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo:"
                        android:textColor="@color/gris_medio"
                        android:textSize="13sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/texto_tipo_actividad_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respuesta Abierta"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_students"
                        android:tint="@color/azul_claro"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@string/estudiantes" />

                    <TextView
                        android:id="@+id/texto_estudiantes_actividad_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 estudiantes"
                        android:textColor="@color/azul_claro"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
