<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Actividades"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/gris_oscuro" />

        <!-- Contadores -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textContadorActividades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: 0"
                android:textSize="14sp"
                android:textColor="@color/gris_medio" />

            <TextView
                android:id="@+id/textContadorPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendientes: 0"
                android:textSize="14sp"
                android:textColor="@color/naranja_advertencia"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/textContadorCompletadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completadas: 0"
                android:textSize="14sp"
                android:textColor="@color/verde_exito" />

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActividades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <!-- Mensaje sin actividades -->
    <LinearLayout
        android:id="@+id/layoutSinActividades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_actividades"
            android:alpha="0.3"
            android:layout_marginBottom="16dp"
            android:contentDescription="Sin actividades" />

        <TextView
            android:id="@+id/textSinActividades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes actividades asignadas.\n¡Tu profesor asignará actividades pronto!"
            android:textSize="16sp"
            android:textColor="@color/gris_medio"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>
