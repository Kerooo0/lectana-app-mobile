<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_estudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_fuerte"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/saludo_estudiante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¡Hola, Juanito!"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/boton_configuracion_estudiante"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:tint="@android:color/white"
            android:contentDescription="Configuración"
            android:padding="4dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_estudiante"
        app:layout_constraintBottom_toTopOf="@id/navegacion_inferior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección Novedad -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_novedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/celeste_claro">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¡Novedad!"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_info"
                            android:tint="@color/azul_claro"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/texto_novedad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tu docente te asignó una nueva lectura: El Loro Pelado."
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/boton_ver_lectura"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/boton_azul_rectangular"
                        android:text="Ver lectura"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Continuar Lectura -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continuar Lectura"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Imagen del libro -->
                        <ImageView
                            android:id="@+id/imagen_libro_actual"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/imagen_principito"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/borde_redondeado_imagen_cuento" />

                        <!-- Información del libro -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titulo_libro_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="El Principito"
                                android:textColor="@color/gris_oscuro"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/capitulo_libro_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capítulo 3 de 8"
                                android:textColor="@color/gris_medio"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp" />

                            <!-- Barra de progreso -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/barra_progreso_lectura"
                                    android:layout_width="0dp"
                                    android:layout_height="6dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/barra_progreso_azul" />

                                <TextView
                                    android:id="@+id/porcentaje_progreso_lectura"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="37% completado"
                                    android:textColor="@color/azul_claro"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Botón reproducir -->
                        <ImageView
                            android:id="@+id/boton_reproducir_lectura"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_play_circle"
                            android:tint="@color/azul_claro"
                            android:background="@drawable/circle_background"
                            android:padding="8dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Actividad Pendiente -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/naranjaPastel"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat"
                        android:tint="@color/gris_oscuro"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texto_actividad_pendiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tenés 1 actividad pendiente"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/nombre_actividad_pendiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La Abeja Haragana"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/boton_hacer_actividad"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/boton_naranja_rectangular"
                        android:text="Hacer"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="16dp"
                        app:backgroundTint="@null" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Racha de Lectura -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/amarilloPastel"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_flame"
                        android:tint="@color/gris_oscuro"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/texto_racha_lectura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Racha de lectura: 3 días seguidos"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trophy"
                        android:tint="@color/amarilloCalido" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sección Puntos Ganados -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/verdeClaro"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_points"
                        android:tint="@color/gris_oscuro"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/texto_puntos_semana"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Puntos ganados esta semana: +25 puntos"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bar_chart"
                        android:tint="@color/verde" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Navegación Inferior -->
    <LinearLayout
        android:id="@+id/navegacion_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/tab_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/azul_fuerte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@color/azul_fuerte"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Biblioteca -->
        <LinearLayout
            android:id="@+id/tab_biblioteca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_library"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biblioteca"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Progreso -->
        <LinearLayout
            android:id="@+id/tab_progreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_trophy"
                    android:tint="@color/gris_medio" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignTop="@id/tab_progreso"
                    android:layout_alignEnd="@id/tab_progreso"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/circle_red"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Tienda -->
        <LinearLayout
            android:id="@+id/tab_tienda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_store"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/tab_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/gris_medio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/gris_medio"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
