<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@color/celeste_claro">

            <ImageView
                android:id="@+id/boton_volver"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/azul_fuerte"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cambiar Contraseña"
                android:textColor="@color/azul_fuerte"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Mensaje informativo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/celeste_claro"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/azul_fuerte"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tu contraseña debe tener al menos 6 caracteres"
                        android:textColor="@color/azul_fuerte"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Contraseña Actual -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña Actual"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/input_password_actual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/campo_texto_rectangular"
                    android:hint="Ingresa tu contraseña actual"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/toggle_password_actual"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/gris_medio"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Mostrar/Ocultar contraseña" />

            </RelativeLayout>

            <!-- Enlace para recuperar contraseña -->
            <TextView
                android:id="@+id/link_olvidaste_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/azul_fuerte"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginBottom="24dp"
                android:background="?attr/selectableItemBackground" />

            <!-- Contraseña Nueva -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva Contraseña"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/input_password_nueva"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/campo_texto_rectangular"
                    android:hint="Ingresa tu nueva contraseña"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/toggle_password_nueva"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/gris_medio"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Mostrar/Ocultar contraseña" />

            </RelativeLayout>

            <!-- Confirmar Contraseña -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar Nueva Contraseña"
                android:textColor="@color/gris_oscuro"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="32dp">

                <EditText
                    android:id="@+id/input_confirmar_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/campo_texto_rectangular"
                    android:hint="Confirma tu nueva contraseña"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/toggle_confirmar_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_visibility"
                    android:tint="@color/gris_medio"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Mostrar/Ocultar contraseña" />

            </RelativeLayout>

            <!-- Botón Guardar -->
            <Button
                android:id="@+id/boton_guardar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/boton_azul_rectangular"
                android:text="Cambiar Contraseña"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/azul_fuerte" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
