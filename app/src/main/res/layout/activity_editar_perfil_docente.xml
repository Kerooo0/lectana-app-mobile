<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_editar_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_fuerte"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/boton_volver_editar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:contentDescription="@string/flecha_descripcion"
            android:padding="4dp" />

        <TextView
            android:id="@+id/texto_titulo_editar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar Perfil"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/boton_guardar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/boton_verde"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_editar_perfil"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Información Personal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Personal"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Nombre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_nombre_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="Ingresa tu nombre"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <!-- Apellido -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellido *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_apellido_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="Ingresa tu apellido"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_email_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="tu@email.com"
                            android:inputType="textEmailAddress" />

                    </LinearLayout>

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_telefono_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="+54 11 1234-5678"
                            android:inputType="phone" />

                    </LinearLayout>

                    <!-- Edad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edad"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_edad_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="25"
                            android:inputType="number" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Información Profesional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información Profesional"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- DNI -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DNI *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_dni_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="12345678"
                            android:inputType="number" />

                    </LinearLayout>

                    <!-- Institución -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institución *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_institucion_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="Nombre de la institución"
                            android:inputType="text" />

                    </LinearLayout>

                    <!-- País -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="País *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_pais_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="Argentina"
                            android:inputType="text" />

                    </LinearLayout>

                    <!-- Provincia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Provincia *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/edt_provincia_docente"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="12dp"
                            android:textSize="16sp"
                            android:hint="Buenos Aires"
                            android:inputType="text" />

                    </LinearLayout>

                    <!-- Nivel Educativo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nivel Educativo *"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinner_nivel_educativo"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/campo_texto_rectangular" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botón de acción -->
            <Button
                android:id="@+id/boton_cancelar_edicion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/boton_borde"
                android:text="Cancelar"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_arrow_back"
                android:drawablePadding="12dp"
                android:gravity="center"
                app:backgroundTint="@null" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
