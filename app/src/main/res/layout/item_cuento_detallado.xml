<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Imagen del cuento -->
        <ImageView
            android:id="@+id/imagen_cuento"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/imagen_cuento_placeholder"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cuentos_asignados" />

        <!-- Contenido del cuento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Título del cuento -->
            <TextView
                android:id="@+id/texto_titulo_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caperucita Roja"
                android:textColor="@color/gris_oscuro"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Subtítulo/Autor -->
            <TextView
                android:id="@+id/texto_subtitulo_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cuento tradicional europeo"
                android:textColor="@color/gris_medio"
                android:textSize="14sp" />

            <!-- Estudiantes que lo leyeron -->
            <TextView
                android:id="@+id/texto_estudiantes_leidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="19 estudiantes lo leyeron"
                android:textColor="@color/verde"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Sección de Actividades -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@color/fondo_claro"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actividades"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <!-- Actividad 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/texto_actividad_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comprensión"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/texto_completadas_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 completadas"
                        android:textColor="@color/gris_medio"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Actividad 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/texto_actividad_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vocabulario"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/texto_completadas_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 completadas"
                        android:textColor="@color/gris_medio"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Botón quitar -->
        <ImageView
            android:id="@+id/boton_quitar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/holo_red_dark"
            android:contentDescription="Quitar cuento"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
