<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <!-- Título de la historia -->
    <TextView
        android:id="@+id/texto_titulo_historia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caperucita Roja"
        android:textColor="@color/gris_oscuro"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Lista de actividades -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Actividad 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:background="@color/fondo_claro"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texto_nombre_actividad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprensión - Capítulo 1"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_tipo_actividad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tipo: Opción Múltiple"
                    android:textColor="@color/gris_medio"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/texto_estudiantes_actividad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 estudiantes"
                    android:textColor="@color/verde"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_estado_actividad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Activa"
                    android:textColor="@color/gris_medio"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Actividad 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:background="@color/fondo_claro">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texto_nombre_actividad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vocabulario - Capítulo 1"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_tipo_actividad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tipo: Respuesta Abierta"
                    android:textColor="@color/gris_medio"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/texto_estudiantes_actividad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 estudiantes"
                    android:textColor="@color/verde"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_estado_actividad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Activa"
                    android:textColor="@color/gris_medio"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
