<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo_claro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad"
        android:textStyle="bold"
        android:textColor="@color/gris_oscuro"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué edad tenía el narrador cuando vio la lámina de la serpiente boa?"
        android:textColor="@color/gris_oscuro"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5 años" />
        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="6 años" />
        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="7 años" />
        <RadioButton android:layout_width="match_parent" android:layout_height="wrap_content" android:text="8 años" />
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Confirmar Respuesta"
        android:onClick="onClickConfirmar"
        android:background="@drawable/boton_verde"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

</LinearLayout>


