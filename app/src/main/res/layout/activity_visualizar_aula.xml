<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header con información del aula -->
    <LinearLayout
        android:id="@+id/header_visualizar_aula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/morado_claro"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/boton_volver"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/gris_oscuro"
                android:contentDescription="@string/cancelar"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/texto_nombre_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3°A - Lengua"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_codigo_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Código: ABC123"
                    android:textColor="@color/gris_medio"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/boton_configuracion_aula"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/gris_oscuro"
                    android:contentDescription="@string/descripcion_configuracion"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tarjetas de Estadísticas -->
    <LinearLayout
        android:id="@+id/contenedor_tarjetas_estadisticas_aula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header_visualizar_aula">

        <!-- Tarjeta de Estudiantes -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_students"
                    android:tint="@color/azul_claro" />

                <TextView
                    android:id="@+id/numero_estudiantes_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="@color/azul_claro"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estudiantes"
                    android:textColor="@color/azul_claro"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de Cuentos -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_book"
                    android:tint="@color/verde" />

                <TextView
                    android:id="@+id/numero_cuentos_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/verde"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuentos_asignados"
                    android:textColor="@color/verde"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de Actividades -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="@color/naranjaPastel" />

                <TextView
                    android:id="@+id/numero_actividades_aula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/naranjaPastel"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actividades"
                    android:textColor="@color/naranjaPastel"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Navegación por Pestañas -->
    <LinearLayout
        android:id="@+id/contenedor_pestanas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/contenedor_tarjetas_estadisticas_aula">

        <!-- Primera fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/boton_pestana_estudiantes"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/estudiantes"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/boton_pestana_activa"
                android:gravity="center"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_pestana_cuentos"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/cuentos_asignados"
                android:textColor="@color/gris_medio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/boton_pestana_inactiva"
                android:gravity="center"
                app:backgroundTint="@null" />

        </LinearLayout>

        <!-- Segunda fila de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/boton_pestana_actividades"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:minWidth="200dp"
                android:paddingHorizontal="32dp"
                android:background="@drawable/boton_pestana_inactiva"
                android:gravity="center"
                android:text="@string/actividades"
                android:textColor="@color/gris_medio"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_pestana_progreso"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Progreso"
                android:textColor="@color/gris_medio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/boton_pestana_inactiva"
                android:gravity="center"
                android:visibility="gone"
                app:backgroundTint="@null" />

        </LinearLayout>

        <!-- Barra de acciones para pestaña Cuentos -->
        <LinearLayout
            android:id="@+id/barra_acciones_cuentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/boton_agregar_cuento"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Agregar cuento"
                android:textColor="@android:color/white"
                android:background="@drawable/boton_verde"
                app:backgroundTint="@null"/>

            <Button
                android:id="@+id/boton_gestionar_cuentos"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Gestionar cuentos"
                android:textColor="@android:color/white"
                android:background="@drawable/boton_azul_rectangular"
                app:backgroundTint="@null"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contenedor_pestanas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de Listas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_contenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/contenedor_pestanas"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Estado vacío reutilizable -->
    <LinearLayout
        android:id="@+id/estado_vacio_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contenedor_pestanas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/texto_estado_vacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRÓXIMAMENTE"
            android:textColor="@color/gris_medio"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/boton_accion_estado_vacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_verde"
            android:text="Crear nueva actividad"
            android:textColor="@android:color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            app:backgroundTint="@null"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
