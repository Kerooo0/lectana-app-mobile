<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkbox_cuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/azul_semi_oscuro" />

        <!-- Icono del cuento -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_book"
            android:tint="@color/azul_semi_oscuro"
            android:layout_marginEnd="16dp" />

        <!-- Información del cuento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto_titulo_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El Principito"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_autor_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Antoine de Saint-Exupéry"
                android:textColor="@color/gris_medio"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/texto_nivel_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nivel: Primaria"
                android:textColor="@color/azul_semi_oscuro"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Indicador de selección -->
        <ImageView
            android:id="@+id/icono_seleccionado"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/verde"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
