<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen del cuento -->
        <ImageView
            android:id="@+id/imagen_cuento"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/imagen_cuento_placeholder"
            android:scaleType="centerCrop" />

        <!-- Información del cuento -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto_nombre_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Cuento"
                android:textColor="@color/gris_oscuro"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/texto_autor_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor del Cuento"
                android:textColor="@color/gris_medio"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/texto_edad_cuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad: 5 años"
                android:textColor="@color/gris_medio"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Botón eliminar -->
        <ImageView
            android:id="@+id/boton_eliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check_circle"
            android:tint="@android:color/holo_red_dark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Eliminar cuento" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
