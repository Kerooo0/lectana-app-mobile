<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_detalle_cuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_claro"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/boton_volver_detalle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:contentDescription="@string/flecha_descripcion"
            android:padding="4dp" />

        <TextView
            android:id="@+id/texto_titulo_detalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Detalle del Cuento"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_detalle_cuento"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen principal del cuento -->
            <ImageView
                android:id="@+id/imagen_principal_cuento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/imagen_cuento_placeholder"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del cuento"
                android:background="@drawable/borde_redondeado_imagen_cuento"
                android:layout_marginBottom="16dp" />

            <!-- Información principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titulo_principal_cuento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caperucita Roja"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/autor_principal_cuento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hermanos Grimm"
                        android:textColor="@color/gris_medio"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <!-- Información adicional en filas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edad recomendada:"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/edad_principal_cuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4-6 años"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Género:"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/genero_principal_cuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clásico"
                            android:textColor="@color/azul_claro"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating:"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/rating_principal_cuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5★"
                            android:textColor="@color/amarilloCalido"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo de lectura:"
                            android:textColor="@color/gris_medio"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tiempo_principal_cuento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 minutos"
                            android:textColor="@color/gris_oscuro"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Descripción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/descripcion_cuento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Un cuento clásico sobre una niña que lleva comida a su abuela enferma y se encuentra con un lobo feroz en el bosque."
                        android:textColor="@color/gris_medio"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Previsualización PDF -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Previsualización"
                        android:textColor="@color/gris_oscuro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="[DEMO] Aquí se mostraría la previsualización del PDF del cuento"
                        android:textColor="@color/gris_medio"
                        android:textSize="14sp"
                        android:background="@color/gris_claro"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/boton_ver_pdf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver PDF Completo"
                        android:background="@drawable/boton_azul_rectangular"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:backgroundTint="@null" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/boton_seleccionar_cuento"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Seleccionar Cuento"
                    android:background="@drawable/boton_verde"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/boton_cancelar_detalle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/cancelar"
                    android:background="@drawable/boton_blanco_rectangular"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="16sp"
                    app:backgroundTint="@null" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
