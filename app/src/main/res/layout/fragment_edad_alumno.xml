<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".registro.alumno.EdadAlumnoFragment">

    <include
        layout="@layout/header_registro"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tituloPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/pregunta_edad_alumno"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/opcion1"
        layout="@layout/item_opcion_alumno"
        android:layout_width="0dp"
        android:layout_marginTop="30dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/opcion2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloPregunta" />


    <include
        android:id="@+id/opcion2"
        layout="@layout/item_opcion_alumno"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tituloPregunta"
        app:layout_constraintTop_toTopOf="@id/opcion1"
        app:layout_constraintStart_toEndOf="@id/opcion1"
        app:layout_constraintEnd_toEndOf="parent" />


    <include
        android:id="@+id/opcion3"
        layout="@layout/item_opcion_alumno"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/opcion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/opcion4"
        app:layout_constraintHorizontal_chainStyle="spread" />


    <include
        android:id="@+id/opcion4"
        layout="@layout/item_opcion_alumno"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/opcion3"
        app:layout_constraintStart_toEndOf="@id/opcion3"
        app:layout_constraintEnd_toEndOf="parent" />


    <include
        android:id="@+id/opcion5"
        layout="@layout/item_opcion_alumno"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opcion3"
        app:layout_constraintStart_toStartOf="@id/opcion3"
        app:layout_constraintEnd_toEndOf="@id/opcion3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>