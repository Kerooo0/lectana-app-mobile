<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment Tienda - Panel Estudiante -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_claro">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_tienda_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_fuerte"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tienda de Recompensas"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/puntos_usuario_tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Tabs de categorías -->
    <LinearLayout
        android:id="@+id/contenedor_tabs_tienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_tienda_fragment">

        <LinearLayout
            android:id="@+id/tab_todos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:background="@color/azul_claro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:textColor="@color/azul_fuerte"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_avatares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:background="@color/fondo_claro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avatares"
                android:textColor="@color/gris_medio"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_insignias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:background="@color/fondo_claro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insignias"
                android:textColor="@color/gris_medio"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_mis_avatares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:background="@color/fondo_claro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Avatares"
                android:textColor="@color/gris_medio"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView de recompensas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tienda"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/contenedor_tabs_tienda"
        app:layout_constraintBottom_toTopOf="@id/boton_info_puntos" />

    <!-- Botón información -->
    <Button
        android:id="@+id/boton_info_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Para qué sirven los puntos?"
        android:textColor="@color/azul_fuerte"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
