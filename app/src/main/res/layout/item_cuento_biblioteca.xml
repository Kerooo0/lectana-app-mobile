<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imagen_portada"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/imagen_principito"
            android:scaleType="centerCrop"
            android:background="@drawable/borde_redondeado_imagen_cuento"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El Principito"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/gris_oscuro" />

            <TextView
                android:id="@+id/texto_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antoine de Saint-Exupéry"
                android:textSize="14sp"
                android:textColor="@color/gris_medio"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/texto_genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clásicos"
                    android:textSize="12sp"
                    android:textColor="@color/gris_medio" />

                <TextView
                    android:id="@+id/texto_tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • 45 min"
                    android:textSize="12sp"
                    android:textColor="@color/gris_medio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_trophy"
                    android:tint="@color/amarilloCalido" />

                <TextView
                    android:id="@+id/texto_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.5"
                    android:textSize="12sp"
                    android:textColor="@color/gris_medio" />

                <TextView
                    android:id="@+id/chip_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuentos"
                    android:background="@drawable/badge_edad"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <Button
                android:id="@+id/boton_ver_detalle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="Ver detalle"
                android:textColor="@android:color/white"
                android:background="@drawable/boton_azul_rectangular"
                android:paddingHorizontal="12dp"
                app:backgroundTint="@null" />

        </LinearLayout>

        <ImageView
            android:id="@+id/boton_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play_circle"
            android:tint="@color/azul_claro"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


