<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PantallaPrincipalDocente">

    <!-- Encabezado Superior -->
    <LinearLayout
        android:id="@+id/encabezado_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azul_semi_oscuro"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/texto_titulo_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/panel_docente"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texto_bienvenida_docente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/bienvenida_profesor"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icono_campana_notificaciones"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/descripcion_notificaciones"
                    android:src="@drawable/ic_notifications"
                    android:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/icono_configuracion_ajustes"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/descripcion_configuracion"
                    android:src="@drawable/ic_settings"
                    android:tint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tarjetas de Estadísticas -->
    <LinearLayout
        android:id="@+id/contenedor_tarjetas_estadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/encabezado_superior">

        <!-- Tarjeta de Aulas -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_classroom"
                    android:tint="@color/azul_claro" />

                <TextView
                    android:id="@+id/numero_total_aulas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/azul_claro"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aulas"
                    android:textColor="@color/azul_claro"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de Estudiantes -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_students"
                    android:tint="@color/verde" />

                <TextView
                    android:id="@+id/numero_total_estudiantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72"
                    android:textColor="@color/verde"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estudiantes"
                    android:textColor="@color/verde"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tarjeta de Cuentos Asignados -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_book"
                    android:tint="@color/naranjaPastel" />

                <TextView
                    android:id="@+id/numero_cuentos_asignados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/naranjaPastel"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuentos_asignados"
                    android:textColor="@color/naranjaPastel"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Sección de Acciones Rápidas -->
    <TextView
        android:id="@+id/texto_titulo_acciones_rapidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:text="@string/acciones_rapidas"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contenedor_tarjetas_estadisticas" />

    <LinearLayout
        android:id="@+id/contenedor_botones_acciones_rapidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/texto_titulo_acciones_rapidas">

        <!-- Botones de acciones rápidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/boton_crear_nueva_aula"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/boton_azul_rectangular"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="10dp"
                android:text="@string/crear_nueva_aula"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_explorar_cuentos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/boton_morado_rectangular"
                android:drawableStart="@drawable/ic_library"
                android:drawablePadding="10dp"
                android:text="@string/explorar_cuentos"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_crear_actividad"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/boton_naranja_rectangular"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="10dp"
                android:text="@string/crear_actividad"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/boton_gestionar_actividades"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/boton_verde_rectangular"
                android:drawableStart="@drawable/ic_assignment"
                android:drawablePadding="10dp"
                android:text="Gestionar Actividades"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

    <!-- Sección de Mis Aulas -->
    <TextView
        android:id="@+id/texto_titulo_mis_aulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:text="@string/mis_aulas"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contenedor_botones_acciones_rapidas" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/texto_titulo_mis_aulas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista de Aulas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_aulas_docente"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/texto_titulo_mis_aulas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
